<p id="notice"><%= notice %></p>

<h1>Employers</h1>

<div class="main-index">
    <% @employers.each do |employer| %>
      <div class="ui card">
        <div class="image">
          <%if employer.image.attached? %>
            <%= image_tag (employer.image)%>
          <% end %>
        </div>
        <div class="content">
          <a class="header"><%=employer.full_name%></a>
          <div class="meta">
            <%= employer.created_at%>
          </div>
          <div class="content">
          <%= employer.company_name%>
          </div>
          <div class="content">
          <%= employer.email%>
          </div>
          <div>
          <%= link_to 'More Info',employer %>
          </div>
          <div>
            <% if current_developer %>
            <a href="/messages/chat/<%= employer.id%>">Message <%=employer.first_name%></a>
            <% end %>
          </div>
        </div>  
    <% end %>   
</div>

